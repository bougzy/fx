# Environment Variables for FX Discipline Platform
# Copy this to .env.local for local development
# Set these in Vercel Dashboard > Settings > Environment Variables for production

# MongoDB Connection (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# NextAuth Secret (REQUIRED)
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-secret-here

# NOTE: Do NOT set AUTH_URL on Vercel - it auto-detects the URL
# Only set AUTH_URL for local development:
# AUTH_URL=http://localhost:3000

# Google OAuth (optional)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
